<?xml version="1.0" encoding="utf-8"?>
<install version="1.5" type="plugin" group="content">
  <name>Content - Core Design Web Gallery plugin</name>
  <author>Daniel Rataj</author>
  <creationDate>June 16th, 2010</creationDate>
  <copyright>(C) 2007 - 2010 Great Joomla! All rights reserved.</copyright>
  <license>http://www.gnu.org/copyleft/gpl.html GNU/GPL 3</license>
  <authorEmail>info@greatjoomla.com</authorEmail>
  <authorUrl>www.greatjoomla.com</authorUrl>
  <version>1.0.9 Free</version>
  <description>DESC_CDWEBGALLERY</description>
  <files>
    <filename plugin="cdwebgallery">cdwebgallery.php</filename>
    <folder>cdwebgallery</folder>
  </files>
  <languages>
  	<language tag="en-GB">en-GB.plg_content_cdwebgallery.ini</language>
   </languages>
  <params addpath="/plugins/content/cdwebgallery/elements">
  <param type="title" default="TITLE_DEFAULT_SETTINGS" />
  <param name="integration" type="folderlist" default="cdwebgallery" label="LABEL_INTEGRATION" description="DESC_INTEGRATION" directory="plugins/content/cdwebgallery/integration" filter="" exclude="" />
  <param name="theme" type="folderlist" default="default" label="LABEL_THEME" description="DESC_THEME" directory="plugins/content/cdwebgallery/theme" filter="" exclude="" />
   <param name="engine" type="folderlist" default="popup" label="LABEL_ENGINE" description="DESC_ENGINE" directory="plugins/content/cdwebgallery/engine" filter="" exclude="" />
   <param name="@spacer" type="spacer" default="" label="" description="" />
   <param name="display_gal_title" type="list" default="0" label="LABEL_DISPLAY_GALLERY_TITLE" description="DESC_DISPLAY_GALLERY_TITLE">
    <option value="0">PARAM_DISPLAY_GALLERY_TITLE_NO</option>
    <option value="1">PARAM_DISPLAY_GALLERY_TITLE_YES</option>
	</param>
  <param name="thumbnail_title" type="list" default="1" label="LABEL_THUMBNAIL_TITLE" description="DESC_THUMBNAIL_TITLE">
		<option value="1">PARAM_THUMBNAIL_TITLE_YES</option>
    <option value="0">PARAM_THUMBNAIL_TITLE_NO</option>
	</param>
	<param name="@spacer" type="spacer" default="" label="" description="" />
	<param name="pagination" type="text" default="0" label="LABEL_PAGINATION" description="DESC_PAGINATION" />
	<param name="only_first" type="list" default="0" label="LABEL_ONLY_FIRST" description="DESC_ONLY_FIRST">
		<option value="0">PARAM_ONLY_FIRST_0</option>
		<option value="1">PARAM_ONLY_FIRST_1</option>
	</param>
   <param type="title" default="TITLE_RESIZE_SETTINGS" />
   <param name="thumb_output" type="list" default="JPG" label="LABEL_OUTPUT_FORMAT" description="DESC_OUTPUT_FORMAT">
		<option value="JPG">PARAM_OUTPUT_FORMAT_JPG</option>
		<option value="PNG">PARAM_OUTPUT_FORMAT_PNG</option>
	</param>
	<param name="thumb_height" type="text" default="100" label="LABEL_THUMB_HEIGHT" description="DESC_THUMB_HEIGHT"/>
	<param name="thumb_width" type="text" default="100" label="LABEL_THUMB_WIDTH" description="DESC_THUMB_WIDTH"/>
	<param type="title" default="TITLE_JPEG_SETTINGS" />
	<param name="jpg_quality" type="text" default="70" label="LABEL_JPEG_QUALITY" description="DESC_JPEG_QUALITY" />
	<param type="title" default="TITLE_WATERMARK_SETTINGS" />
	<param name="watermark" type="list" default="1" label="LABEL_USE_WATERMARK" description="DESC_USE_WATERMARK">
		<option value="1">PARAM_USE_WATERMARK_1</option>
		<option value="0">PARAM_USE_WATERMARK_0</option>
	</param>
	<param name="watermark_image" type="text" default="magnify.png" label="LABEL_WATERMARK_IMAGE" description="DESC_WATERMARK_IMAGE" />
	<param name="watermark_valign" type="list" default="BOTTOM" label="LABEL_VERTICAL_ALIGN" description="DESC_VERTICAL_ALIGN">
		<option value="TOP">PARAM_VERTICAL_ALIGN_TOP</option>
		<option value="CENTER">PARAM_VERTICAL_ALIGN_CENTER</option>
		<option value="BOTTOM">PARAM_VERTICAL_ALIGN_BOTTOM</option>
	</param>
	<param name="watermark_halign" type="list" default="RIGHT" label="LABEL_HORIZONTAL_ALIGN" description="DESC_HORIZONTAL_ALIGN">
		<option value="LEFT">PARAM_HORIZONTAL_ALIGN_LEFT</option>
		<option value="CENTER">PARAM_HORIZONTAL_ALIGN_CENTER</option>
		<option value="RIGHT">PARAM_HORIZONTAL_ALIGN_RIGHT</option>
	</param>
  </params>
</install>
